# Makefile for GNUpod
#
prefix       = @prefix@
exec_prefix  = @exec_prefix@
bindir       = @bindir@
infodir      = @infodir@
mandir       = @mandir@
perlbinary   = @PERL@


install:
	cd tools && $(perlbinary) gnupod_install.pl "$(perlbinary)" "$(bindir)" "$(infodir)" "$(mandir)"

test:
	cd tools && $(perlbinary) gnupod_testit.pl "$(perlbinary)"

